<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= params[:todo_id]%>/edit">Edit todo</a>
      </li>
    </ul>
  </header>
</section>

<% content_for :header_links do %>
  <a href="/lists">All lists</a>
<% end %>

<form action="/lists/<%= @todo_id.to_s %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>