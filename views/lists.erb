<ul id="lists">
  <% sort_lists(@lists) do |list, index| %>
    <% if all_todos_completed?(list) %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%="#{count_incomplete_todos(list)} / #{count_all_todos(list)}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>